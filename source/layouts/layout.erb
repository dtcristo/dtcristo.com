<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= feed_tag :atom, 'feed.xml', title: 'Atom Feed' %>
    <%= favicon_tag 'favicon.ico' %>
    <%= stylesheet_link_tag 'all' %>
    <title><%= page_title %></title>
  </head>
  <body>
    <% unless current_page.data.hide_nav %>
      <nav class="main-nav">
        <a href="/"><span class="arrow">←</span> Home</a>
      </nav>
    <% end %>

    <section id="wrapper" <% unless current_article %>class="home"<% end %>>
      <%= yield %>
      <footer id="footer">
        <p class="small">© <%= Time.now.year %> <%= config[:site_author] %></p>
      </footer>
    </section>

    <%= javascript_include_tag 'all' %>

    <% if config[:google_analytics] %>
      <%= component 'google_analytics' %>
    <% end %>
  </body>
</html>
