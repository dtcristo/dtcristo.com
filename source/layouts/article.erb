<% wrap_layout :layout do %>
  <article class="post">
    <header>
      <h1><%= current_article.title %></h1>
      <h2 class="date"><%= current_article.date.strftime('%e %B %Y') %></h2>
    </header>
    <section id="post-body">
      <%= yield %>
    </section>
  </article>

  <footer id="post-meta">
    <a href="/">
      <img class="avatar" src="/images/avatar.png">
      <div class="details">
        <div class="dark"><%= site_author %></div>
        <div class="light"><%= site_subtitle %></div>
      </div>
    </a>
    <%= partial 'sharing' %>
  </footer>

  <%= partial 'disqus' %>

<% end %>
